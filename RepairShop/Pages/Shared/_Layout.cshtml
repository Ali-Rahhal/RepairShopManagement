<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Repair Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RepairShop.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/datatables/jquery.dataTables.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/tomselect/tom-select.bootstrap5.min.css" asp-append-version="true"/>
</head>
<body>
    @{
        var version = Assembly.GetExecutingAssembly().GetName().Version?.ToString();
    }
    <header>
        <nav class="navbar navbar-expand-xl bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Repair Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Main pages -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index"><i class="bi bi-house-door-fill"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/DefectiveUnits/Index"><i class="bi bi-tools"></i> Defects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-page="/TransactionHeaders/Index"><i class="bi bi-receipt"></i> Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-page="/PreventiveMaintenanceRecords/Index"><i class="bi bi-gear-fill"></i> Maintenance</a>
                        </li>

                        <!-- Assets & Inventory -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-page="/Clients/Index"><i class="bi bi-people-fill"></i> Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Models/Index"><i class="bi bi-box-fill"></i> Models</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/SerialNumbers/Index"><i class="bi bi-upc-scan"></i> Serial Numbers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Warranties/Index"><i class="bi bi-award-fill"></i> Warranties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/MaintenanceContracts/Index"><i class="bi bi-file-earmark-text"></i> Contracts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Parts/Index"><i class="bi bi-box-seam"></i> Parts</a>
                        </li>

                        <!-- Admin Section (only for admins) -->
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-area="Admin" asp-page="/History/SerialNumberHistory">
                                    <i class="bi bi-clock-history"></i> History
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock-fill"></i> Admin
                                </a>
                                <ul class="dropdown-menu" data-bs-theme="light">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-page="/Users/Index">Manage Users</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-page="/ProcessTransactions/Index">Process Transactions</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-page="/AuditLogHistory/Index">Audit Log</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-page="/PartReports/Index">Part Reports</a></li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-3">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <small>&copy; 2025 RepairShop. All rights reserved.</small>
            <small>Version: @version</small>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert/sweetalert2@11.js" asp-append-version="true"></script>
    <script src="~/lib/toastr/toastr.min.js" asp-append-version="true"></script>
    <script src="~/lib/tomselect/tom-select.complete.min.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>