@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="d-flex justify-content-center">
    <div class="card shadow border-0 mt-4" style="width: 75%; margin: 0 auto;">
        <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Register - ADMIN PORTAL</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account.</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.UserCode" class="form-control" placeholder="" />
                            <label asp-for="Input.UserCode" class="ms-2 text-muted">UserCode</label>
                            <span asp-validation-for="Input.UserCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="ms-2 text-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option disabled selected>-Select Role-</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        </div>
                        <div class="col-12">
                            <a asp-area="Admin" asp-page="/Users/Index" class="w-100 mt-1 w-75 btn btn-outline-primary">Back to List</a>
                        </div>

                    </form>
                </div>
