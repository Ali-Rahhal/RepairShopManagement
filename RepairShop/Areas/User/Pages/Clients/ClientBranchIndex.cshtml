@page
@model RepairShop.Areas.User.Pages.Clients.ClientBranchIndexModel

<div class="card shadow border-0 my-4 w-100 w-xl-60 mx-auto">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Client Branches List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <input type="hidden" value="@Model.ParentId" id="parentId" />
                <button type="button" title="Reset Sorting" class="btn btn-warning btn-sm" onclick="resetSorting()">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>
            <div class="col-6 text-end">
                <a asp-page="./ClientBranchUpsert" asp-route-id="0" asp-route-parentId="@Model.ParentId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Branch
                </a>
            </div>
        </div>
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-page="./Index" class="btn btn-outline-primary">
                    Back to Client List
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/clientBranch.js" asp-append-version="true"></script>
}