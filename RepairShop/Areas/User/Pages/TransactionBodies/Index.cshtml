@page
@model RepairShop.Areas.User.Pages.TransactionBodies.IndexModel
@{
}

<div class="d-flex justify-content-center">
    <div class="card shadow border-0 mt-4" style="width: 100%; margin: 0 auto;">
        <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">
                        Parts List
                    </h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                    <input hidden id="isAdmin" value="@User.IsInRole(SD.Role_Admin).ToString()" />
                    <input hidden id="HeaderStatus" value="@Model.HeaderStatus" />
                    <input hidden asp-for="HeaderId" id="HeaderId" />
                </div>
                <div class="col-6 text-end">
                    @if (User.IsInRole(SD.Role_User) && Model.HeaderStatus != SD.Status_Job_Completed)
                    {
                        <a asp-page="Upsert" asp-route-headerId="@Model.HeaderId" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Part
                        </a>
                    }
                    <a asp-page="../TransactionHeaders/Index" class="btn btn-outline-primary">
                        Back to Transactions
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr class="table-primary">
                            <th>Broken Part Name</th>
                            <th>Status</th>
                            <th>Replacement Part Name</th>
                            <th>Created Date</th>
                            <th></th><!-- History (Admin Only) -->
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/transactionBodies.js"></script>
}