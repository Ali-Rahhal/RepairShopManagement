@page
@model RepairShop.Areas.User.Pages.TransactionHeaders.IndexModel
@{
}
<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Transactions List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <!-- Filters -->
                <div class="row align-items-center">
                    <input hidden id="isAdmin" value="@User.IsInRole(SD.Role_Admin).ToString()" />
                    <div class="col-auto">
                        <label for="clientFilter" class="col-form-label fw-bold">Filter by Client:</label>
                    </div>
                    <div class="col-auto">
                        <select id="clientFilter" class="form-select form-select-sm">
                            <option value="All">All Clients</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <label for="statusFilter" class="col-form-label fw-bold">Filter by Status:</label>
                    </div>
                    <div class="col-auto">
                        <select id="statusFilter" class="form-select form-select-sm">
                            <option value="All">All Statuses</option>
                            <option value="New">New</option>
                            <option value="InProgress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="OutOfService">Out of Service</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <label for="minDate" class="col-form-label fw-bold">From Date:</label>
                    </div>
                    <div class="col-auto">
                        <input type="date" id="minDate" class="form-control form-control-sm">
                    </div>
                    <div class="col-auto">
                        <label for="maxDate" class="col-form-label fw-bold">To Date:</label>
                    </div>
                    <div class="col-auto">
                        <input type="date" id="maxDate" class="form-control form-control-sm">
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-sm btn-warning" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-6 text-end">
                @if (User.IsInRole(SD.Role_User))
                {
                    <a asp-page="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Transaction
                    </a>
                }

            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>User Name</th><!-- (Admin only) -->
                        <th>Model</th>
                        <th>Serial Number</th>
                        <th>Status</th>
                        <th>Client Name</th>
                        <th>Created Date</th>
                        <th></th><!-- Parts (Admin Only) -->
                        <th></th><!-- Parts, Edit, Delete, Cancel (User Only) -->
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/transactionHeaders.js"></script>
}