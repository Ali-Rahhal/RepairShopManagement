@page
@model RepairShop.Areas.User.Pages.TransactionHeaders.IndexModel
@{
}
<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Transactions List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-page="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Transaction
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Printer Model</th>
                        <th>Serial Number</th>
                        <th>Status</th>
                        <th>Client Name</th>
                        <th>Created Date</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/transactionHeaders.js"></script>
}