@page
@model RepairShop.Areas.Admin.Pages.SerialNumbers.IndexModel
@{
}
<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Serial Numbers</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <input hidden id="isAdmin" value="@User.IsInRole(SD.Role_Admin).ToString()" />
            <div class="col-6">
                <!-- Filters -->
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="d-flex align-items-center">
                            <select id="modelFilter" class="form-select form-select-sm ms-2">
                                <option value="All">All Models</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center">
                            <select id="clientFilter" class="form-select form-select-sm ms-2">
                                <option value="All">All Clients</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-sm btn-warning" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-6 text-end">
                <a asp-page="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Serial Number
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Serial Number</th>
                        <th>Model</th>
                        <th>Client</th>
                        <th>Branch</th>
                        <th>Maintenance Contract</th>
                        <th>Received Date</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/serialNumber.js" asp-append-version="true"></script>
}