@page
@model RepairShop.Areas.Admin.Pages.Users.EditModel
@{
}

<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Edit User
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" ">
            <input type="hidden" asp-for="Input.Id" />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Input.UserCode" class="form-control border-0 shadow" />
                            <label asp-for="Input.UserCode" class="form-label"></label>
                            <span asp-validation-for="Input.UserCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select border-0 shadow">
                                <option disabled selected>-Select Role-</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                        
                        <p class="form-floating py-2 mb-0 mt-3 col-12 text-primary">Change Password (Optional):</p>
                        
                        <div class="form-floating py-1 col-12">
                            <input asp-for="Input.OldPassword" class="form-control border-0 shadow" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                            <label asp-for="Input.OldPassword" class="form-label"></label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <input asp-for="Input.NewPassword" class="form-control border-0 shadow" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <input asp-for="Input.ConfirmPassword" class="form-control border-0 shadow" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <button asp-page="Index" class="btn btn-outline-primary form-control">
                                    Back to List
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



