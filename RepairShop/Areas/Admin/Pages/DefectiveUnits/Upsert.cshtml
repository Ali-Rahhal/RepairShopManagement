@page
@model RepairShop.Areas.Admin.Pages.DefectiveUnits.UpsertModel
@{
    ViewData["Title"] = Model.DefectiveUnitForUpsert.Id != 0 ? "Edit Defective Unit" : "Report Defective Unit";
}

<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.DefectiveUnitForUpsert.Id != 0 ? "Edit" : "Report") Defective Unit
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="DefectiveUnitForUpsert.Id" id="duId" />
            <input type="hidden" asp-for="DefectiveUnitForUpsert.SerialNumberId" id="selectedSerialId" />
            <input type="hidden" asp-for="DefectiveUnitForUpsert.WarrantyId" id="selectedWarrantyId" />
            <input type="hidden" asp-for="DefectiveUnitForUpsert.MaintenanceContractId" id="selectedContractId" />

            <div class="row">
                <div class="col-12 col-md-10 mx-auto">
                    <div class="border p-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Serial Number Search/Create Section -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Serial Number *</label>
                            <div class="input-group">
                                <input type="text" id="serialNumberSearch" class="form-control"
                                       placeholder="Enter serial number or search existing...">
                                <button type="button" class="btn btn-outline-primary" onclick="searchSerialNumbers()">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                            <div id="searchMessage" class="mt-1 small" style="display: none;"></div>

                            <div id="searchResults" class="mt-2" style="display: none;">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Search Results</h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="searchResultsList" class="list-group">
                                            <!-- Results will be populated here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- New Serial Number Creation Fields (Hidden by default) -->
                        <div id="newSerialFields" class="border p-3 rounded mb-4" style="display: none;">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-plus-circle"></i> Create New Serial Number
                            </h6>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewSerialNumber.Value" class="form-label fw-bold">Serial Number Value</label>
                                        <input asp-for="NewSerialNumber.Value" class="form-control" id="newSerialValue" />
                                        <span asp-validation-for="NewSerialNumber.Value" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewSerialNumber.ModelId" class="form-label fw-bold">Model</label>
                                        <select asp-for="NewSerialNumber.ModelId" asp-items="@Model.ModelList"
                                                class="form-select" id="newSerialModel">
                                            <option disabled selected>--Select Model--</option>
                                        </select>
                                        <span asp-validation-for="NewSerialNumber.ModelId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewSerialNumber.ClientId" class="form-label fw-bold">Client</label>
                                        <select asp-for="NewSerialNumber.ClientId" asp-items="@Model.ClientList"
                                                class="form-select" id="newSerialClient">
                                            <option disabled selected>--Select Client--</option>
                                        </select>
                                        <span asp-validation-for="NewSerialNumber.ClientId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewSerialNumber.MaintenanceContractId" class="form-label fw-bold">Maintenance Contract (Optional)</label>
                                        <select asp-for="NewSerialNumber.MaintenanceContractId" class="form-select" id="newSerialContract">
                                            <option value="">--Select Contract--</option>
                                        </select>
                                        <span asp-validation-for="NewSerialNumber.MaintenanceContractId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Selected Serial Number Details -->
                        <div id="selectedSerialInfo" class="mb-4 p-3 border rounded" style="display: none;">
                            <h6 class="text-success">
                                <i class="bi bi-check-circle"></i> Existing Device Found
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Serial Number:</strong> <span id="selectedSerialValue"></span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Model:</strong> <span id="selectedModelName"></span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Client:</strong> <span id="selectedClientName"></span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Received Date:</strong> <span id="SelectedReceivedDate"></span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Warranty:</strong>
                                    <span id="warrantyStatus" class="badge bg-secondary">Checking...</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Maintenance Contract:</strong>
                                    <span id="contractStatus" class="badge bg-secondary">Checking...</span>
                                </div>
                            </div>
                        </div>

                        <!-- NEW: Has Accessories Checkbox -->
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="DefectiveUnitForUpsert.HasAccessories" class="form-check-input" type="checkbox" id="hasAccessoriesCheckbox">
                                <label class="form-check-label fw-bold" for="hasAccessoriesCheckbox">
                                    Includes Accessories
                                </label>
                            </div>
                            <small class="form-text text-muted">Check this if the defective unit comes with accessories (charger, cables, etc.)</small>
                        </div>

                        <!-- NEW: Accessories Textbox (Conditional) -->
                        <div id="accessoriesSection" class="mb-3" style="display: none;">
                            <label asp-for="DefectiveUnitForUpsert.Accessories" class="form-label fw-bold">Accessories Details</label>
                            <textarea asp-for="DefectiveUnitForUpsert.Accessories" class="form-control" rows="3"
                                      placeholder="List the accessories included (e.g., 'Original charger, USB-C cable, Carrying case')"></textarea>
                            <span asp-validation-for="DefectiveUnitForUpsert.Accessories" class="text-danger"></span>
                            <small class="form-text text-muted">Specify all accessories that are included with the defective unit.</small>
                        </div>

                        <!-- Defective Unit Details -->
                        <div class="mb-3">
                            <label asp-for="DefectiveUnitForUpsert.Description" class="form-label fw-bold">Issue Description *</label>
                            <textarea asp-for="DefectiveUnitForUpsert.Description" class="form-control" rows="4"
                                      placeholder="Describe the issue (e.g., 'Screen flickering', 'Power failure', 'No boot')"></textarea>
                            <span asp-validation-for="DefectiveUnitForUpsert.Description" class="text-danger"></span>
                        </div>

                        @if (Model.DefectiveUnitForUpsert.Id != 0)
                        {
                            <div class="row">
                                @if (Model.DefectiveUnitForUpsert.ResolvedDate.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Resolved Date</label>
                                            <input type="text" class="form-control" value="@Model.DefectiveUnitForUpsert.ResolvedDate.Value.ToString("yyyy-MM-dd")" readonly />
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <div class="row pt-3">
                            <div class="col-6">
                                @if (Model.DefectiveUnitForUpsert.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update Report</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control" id="submitBtn" disabled>Report Defective Unit</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="Index" class="btn btn-outline-primary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/DUserialNumberSearch.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize TomSelect for dropdowns
            new TomSelect('#newSerialModel', {
                placeholder: '-- Select Model --',
                create: false
            });

            new TomSelect('#newSerialClient', {
                placeholder: '-- Select Client --',
                create: false,
                onChange: function(value) {
                    if (value && value !== '') {
                        loadContractsForClient(value);
                    } else {
                        $('#newSerialContract').html('<option value="">--Select Contract--</option>');
                    }
                }
            });

            // Handle HasAccessories checkbox change
            const hasAccessoriesCheckbox = document.getElementById('hasAccessoriesCheckbox');
            const accessoriesSection = document.getElementById('accessoriesSection');

            function toggleAccessoriesSection() {
                if (hasAccessoriesCheckbox.checked) {
                    accessoriesSection.style.display = 'block';
                } else {
                    accessoriesSection.style.display = 'none';
                    // Clear the accessories field when unchecked
                    document.getElementById('DefectiveUnitForUpsert_Accessories').value = null;
                }
            }

            hasAccessoriesCheckbox.addEventListener('change', toggleAccessoriesSection);

            // Initialize accessories section based on current state
            toggleAccessoriesSection();

            // Enable enter key for search
            const searchInput = document.getElementById('serialNumberSearch');
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    searchSerialNumbers();
                }
            });

            // If editing, load the existing serial number details
            @if (Model.DefectiveUnitForUpsert.Id != 0 && Model.DefectiveUnitForUpsert.SerialNumberId > 0)
            {
                    <text>
                    loadSerialNumberDetails(@Model.DefectiveUnitForUpsert.SerialNumberId);
                    </text>
            }
        });
    </script>
}