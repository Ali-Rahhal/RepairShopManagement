@page
@model RepairShop.Areas.Admin.Pages.Warranties.UpsertModel

<div class="card shadow border-0 my-4 w-100 w-xl-60 mx-auto">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.WarrantyForUpsert.Id != 0 ? "Edit" : "Create") Warranty
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="WarrantyForUpsert.Id" />
            <div class="row">
                <div class="col-12 mx-auto">
                    <div class="border p-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @if (Model.WarrantyForUpsert.Id == 0)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Upload Excel with Serial Numbers (Optional)</label>
                                <div class="input-group">
                                    <input type="file" id="excelFileInput" class="form-control" accept=".xls,.xlsx" />
                                    <button type="button" class="btn btn-outline-danger btn-sm" id="clearFileInput" title="Clear file and serial numbers">
                                        <i class="bi bi-x"></i>
                                    </button>
                                </div>
                                <small class="form-text text-muted">
                                    The Excel file should contain only one column named like "SerialNumber" or similar, containing serial numbers.
                                </small>
                            </div>
                            <!-- Bulk Serial Number Creation for new warranties -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">New Serial Numbers</label>
                                <textarea asp-for="NewSerialNumbersInput" class="form-control" id="newSerialNumbersInputTA" rows="3"
                                          placeholder="Enter serial numbers separated by semicolons (;)&#10;Example: SN001;SN002;SN003"></textarea>
                                <span asp-validation-for="NewSerialNumbersInput" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Enter new serial numbers separated by semicolons. These will be created and assigned to this warranty.
                                </small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SelectedModelId" class="form-label fw-bold">Model</label>
                                <select asp-for="SelectedModelId" asp-items="@Model.ModelList" class="form-select" id="modelSelect">
                                    <option disabled selected>-- Select Model --</option>
                                </select>
                                <span asp-validation-for="SelectedModelId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SelectedClientId" class="form-label fw-bold">Client</label>
                                <select asp-for="SelectedClientId" asp-items="@Model.ClientList" class="form-select" id="clientSelect">
                                    <option disabled selected>-- Select Client --</option>
                                </select>
                                <span asp-validation-for="SelectedClientId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SelectedMaintenanceContractId" class="form-label fw-bold">Maintenance Contract (Optional)</label>
                                <select asp-for="SelectedMaintenanceContractId" asp-items="@Model.MaintenanceContractList" class="form-select" id="maintenanceContractSelect">
                                    <option value="">-- No Maintenance Contract --</option>
                                </select>
                                <span asp-validation-for="SelectedMaintenanceContractId" class="text-danger"></span>
                                <small class="form-text text-muted" id="contractLoadingText" style="display: none;">
                                    Loading contracts...
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Covered Serial Numbers</label>

                                <div class="border rounded bg-light p-2" id="serialList" style="max-height: 280px; overflow-y: auto;">
                                    @foreach (var sn in Model.WarrantyForUpsert.SerialNumbers)
                                    {
                                        <div class="serial-row d-flex justify-content-between align-items-center
                                                    px-3 py-2 rounded mb-1 shadow-sm"
                                             style="cursor:pointer; transition: all .15s ease;"
                                             data-serial-id="@sn.Id"
                                             data-current-client="@sn.ClientId">

                                            <div>
                                                <span class="fw-semibold">@sn.Value</span>
                                            </div>

                                            <span class="badge bg-secondary-subtle text-dark">
                                                @sn.Client?.Name
                                            </span>
                                        </div>
                                    }
                                </div>

                                <small class="text-muted">
                                    Click a serial number to change its client.
                                </small>
                            </div>

                            <!-- Single-serial editor (hidden by default) -->
                            <div id="singleSerialEditor" class="border rounded p-3 d-none">
                                <label class="form-label fw-bold">
                                    Change Client for Serial:
                                    <span id="activeSerialValue" class="text-primary"></span>
                                </label>

                                <select id="singleClientSelect">
                                    <option value="">-- Select Client --</option>
                                    @foreach (var client in Model.ClientList)
                                    {
                                        <option value="@client.Value">@client.Text</option>
                                    }
                                </select>

                                <button type="button"
                                        class="btn btn-sm btn-primary mt-2"
                                        id="applySingleClientBtn">
                                    Update Client
                                </button>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="WarrantyForUpsert.StartDate" class="form-label fw-bold"></label>
                                    <input asp-for="WarrantyForUpsert.StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="WarrantyForUpsert.StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="WarrantyForUpsert.EndDate" class="form-label fw-bold"></label>
                                    <input asp-for="WarrantyForUpsert.EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="WarrantyForUpsert.EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (Model.WarrantyForUpsert.Id != 0)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status</label>
                                <input type="text" class="form-control" value="@(Model.WarrantyForUpsert.EndDate < DateTime.Now ? "Expired" : "Active")" readonly />
                                <small class="form-text text-muted">Status is automatically calculated based on end date.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    Change Client for ALL Covered Serial Numbers
                                </label>

                                <select id="bulkClientSelect">
                                    <option value="">-- Select Client --</option>
                                    @foreach (var client in Model.ClientList)
                                    {
                                        <option value="@client.Value">@client.Text</option>
                                    }
                                </select>

                                <button type="button"
                                        class="btn btn-warning mt-2"
                                        onclick="applyBulkClient(@Model.WarrantyForUpsert.Id)">
                                    Apply to All Serial Numbers
                                </button>

                                <small class="text-muted">
                                    This will update the client for all serial numbers under this warranty.
                                </small>
                            </div>
                        }


                        <div class="row pt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.WarrantyForUpsert.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update Warranty</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create Warranty</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-page="Index" class="btn btn-outline-primary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .serial-row:hover {
        background-color: #eef5ff;
    }

    .serial-row.active {
        background-color: #dbeafe;
        border-left: 4px solid #0d6efd;
    }
</style>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/lib/xlsx/xlsx.full.min.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('excelFileInput');
            const clearFileBtn = document.getElementById('clearFileInput');
            const textarea = document.getElementById('newSerialNumbersInputTA');

            // File input change event
            fileInput.addEventListener('change', function (e) {
                const file = e.target.files[0];
                if (!file) return;

                const reader = new FileReader();
                reader.onload = function (evt) {
                    const data = evt.target.result;

                    // Read Excel using XLSX library
                    const workbook = XLSX.read(data, { type: 'binary' });
                    const firstSheetName = workbook.SheetNames[0];
                    const sheet = workbook.Sheets[firstSheetName];
                    const jsonData = XLSX.utils.sheet_to_json(sheet, { header: 1 }); // array of arrays

                    if (!jsonData || jsonData.length < 2) {
                        toastr.error('Excel must have at least 1 column and some rows.');
                        return;
                    }

                    // Find column that looks like "Serial Number"
                    const headerRow = jsonData[0];
                    let serialColIndex = -1;
                    headerRow.forEach((h, i) => {
                        if (h && h.toString().toLowerCase().includes('serial')) {
                            serialColIndex = i;
                        }
                    });

                    if (serialColIndex === -1) {
                        toastr.error('No column found that looks like serial numbers.');
                        return;
                    }

                    // Extract serial numbers from that column
                    const serialNumbers = [];
                    for (let i = 1; i < jsonData.length; i++) {
                        const val = jsonData[i][serialColIndex];
                        if (val && val.toString().trim() !== '') {
                            serialNumbers.push(val.toString().trim());
                        }
                    }

                    // Fill textarea with semicolon-separated serial numbers
                    if (textarea) {
                        textarea.value = serialNumbers.join(';');
                        textarea.focus();
                    }

                    // Show success message
                    toastr.success(`Loaded ${serialNumbers.length} serial numbers from Excel file`);
                };

                reader.readAsBinaryString(file);
            });

            // Clear file input and textarea
            clearFileBtn.addEventListener('click', function() {
                // Clear file input
                fileInput.value = '';

                // Clear textarea
                if (textarea) {
                    textarea.value = '';
                }

                // Show confirmation message
                toastr.info('File and serial numbers cleared');
            });

            // Initialize TomSelect components
            new TomSelect('#modelSelect', {
                placeholder: '-- Select Model --',
                create: false,
                sortField: {
                    field: 'text',
                    direction: 'asc'
                }
            });

            new TomSelect('#clientSelect', {
                placeholder: '-- Select Client --',
                create: false,
                sortField: {
                    field: 'text',
                    direction: 'asc'
                }
            });

            const clientSelect = document.getElementById('clientSelect');
            const contractSelect = document.getElementById('maintenanceContractSelect');
            const contractLoadingText = document.getElementById('contractLoadingText');

            if (clientSelect && contractSelect) {
                clientSelect.addEventListener('change', function() {
                    const clientId = this.value;

                    if (clientId) {
                        // Show loading
                        contractLoadingText.style.display = 'block';
                        contractSelect.disabled = true;

                        // Clear existing options except the first one
                        while (contractSelect.options.length > 1) {
                            contractSelect.remove(1);
                        }

                        // Fetch maintenance contracts for the selected client
                        fetch(`/Admin/Warranties/Upsert?handler=MaintenanceContractsByClient&clientId=${clientId}`)
                            .then(response => response.json())
                            .then(data => {
                                // Add new options
                                data.forEach(item => {
                                    if (item.value !== '') { // Skip the empty option we'll add manually
                                        const option = new Option(item.text, item.value);
                                        contractSelect.add(option);
                                    }
                                });

                                // Hide loading
                                contractLoadingText.style.display = 'none';
                                contractSelect.disabled = false;
                            })
                            .catch(error => {
                                console.error('Error loading maintenance contracts:', error);
                                contractLoadingText.style.display = 'none';
                                contractSelect.disabled = false;
                            });
                    } else {
                        // Clear contracts if no client selected
                        while (contractSelect.options.length > 1) {
                            contractSelect.remove(1);
                        }
                    }
                });
            }
        });

        let activeSerialId = null;
        let singleClientTS = null;

        // Init bulk TomSelect
        const bulkClientTS = new TomSelect('#bulkClientSelect', { create: false });

        // Serial row click behavior
        document.querySelectorAll('.serial-row').forEach(row => {
            row.addEventListener('click', function () {

                // remove highlight from all rows
                document.querySelectorAll('.serial-row').forEach(r => r.classList.remove('active'));

                // highlight selected row
                this.classList.add('active');

                activeSerialId = this.dataset.serialId;
                const currentClient = this.dataset.currentClient;
                const serialValue = this.querySelector('span').innerText;

                document.getElementById('activeSerialValue').innerText = serialValue;

                const editor = document.getElementById('singleSerialEditor');
                editor.classList.remove('d-none');

                if (singleClientTS) {
                    singleClientTS.destroy();
                }

                singleClientTS = new TomSelect('#singleClientSelect', {
                    create: false,
                    items: currentClient ? [currentClient] : []
                });

                editor.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            });
        });

        // Apply single serial update
        document.getElementById('applySingleClientBtn')?.addEventListener('click', () => {
            const clientId = singleClientTS.getValue();
            if (!clientId || !activeSerialId) return;

            fetch('/Admin/Warranties/Upsert?handler=ChangeSerialClient', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken':
                        document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: `serialId=${activeSerialId}&clientId=${clientId}`
            })
            .then(r => r.json())
            .then(res => {
                if (res.success) {
                    toastr.success('Client updated');
                    setTimeout(() => {
                        location.reload();
                    }, 700);
                } else {
                    toastr.error(res.message || 'Failed');
                }
            });
        });

        function applyBulkClient(warrantyId) {
            const clientId = bulkClientTS.getValue();
            if (!clientId) {
                toastr.warning('Please select a client');
                return;
            }

            Swal.fire({
                title: 'Change client for ALL serial numbers?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, update all'
            }).then(result => {
                if (!result.isConfirmed) return;

                fetch('/Admin/Warranties/Upsert?handler=ChangeAllSerialClients', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken':
                            document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `warrantyId=${warrantyId}&clientId=${clientId}`
                })
                .then(r => r.json())
                .then(res => {
                    if (res.success) {
                        toastr.success('All serials updated');
                        setTimeout(() => {
                            location.reload();
                        }, 700);
                    } else {
                        toastr.error(res.message || 'Failed');
                    }
                });
            });
        }
    </script>
}