@page
@model RepairShop.Areas.Admin.Pages.ProcessTransactions.IndexModel
@{
}

<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Transactions List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 col-xl-9">
                <!-- Filters -->
                <div class="row align-items-center">
                    <input hidden id="isAdmin" value="@User.IsInRole(SD.Role_Admin).ToString()" />
                    <div class="col-6 col-xl-3">
                        <label for="minDate" class="col-form-label fw-bold">From Date:</label>
                        <input type="date" id="minDate" class="form-control form-control-sm">
                    </div>
                    <div class="col-6 col-xl-3">
                        <label for="maxDate" class="col-form-label fw-bold">To Date:</label>
                        <input type="date" id="maxDate" class="form-control form-control-sm">
                    </div>
                    <div class="col-6 col-xl-2">
                        <label for="clientFilter" class="col-form-label fw-bold">Filter by Client:</label>
                        <select id="clientFilter" class="form-select form-select-sm">
                            <option value="All">All Clients</option>
                        </select>
                    </div>
                    <div class="col-6 col-xl-2">
                        <label for="statusFilter" class="col-form-label fw-bold">Filter by Status:</label>
                        <select id="statusFilter" class="form-select form-select-sm">
                            <option value="All">All Statuses</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Processed">Processed</option>
                        </select>
                    </div>
                    <div class="col-6 col-xl-2">
                        <label for="resetFiltersBtn" class="col-form-label fw-bold">Reset Filters:</label>
                        <br />
                        <button type="button" id="resetFiltersBtn" class="btn btn-sm btn-warning" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Client</th>
                        <th>Branch</th>
                        <th>Received Date</th>
                        <th>Fixed Date</th>
                        <th>Model</th>
                        <th>Serial Number</th>
                        <th>Issue</th>
                        <th>Spare Parts</th>
                        <th>Cost</th>
                        <th>Labor Fees</th>
                        <th>Comment</th>
                        <th></th>
                        <th></th> <!-- status col (for ordering rows) -->
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/processTransactions.js" asp-append-version="true"></script>
}
