@page
@model RepairShop.Areas.Admin.Pages.MaintenanceContracts.IndexModel
@{
    ViewData["Title"] = "Maintenance Contracts";
}

<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Maintenance Contracts</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <input hidden id="isAdmin" value="@User.IsInRole(SD.Role_Admin).ToString()" />
            <div class="col-6">
                <!-- Filters -->
                <div class="row align-items-center">
                    <div class="col-auto">
                        <label for="statusFilter" class="col-form-label fw-bold">Filter by Status:</label>
                    </div>
                    <div class="col-auto">
                        <select id="statusFilter" class="form-select form-select-sm">
                            <option value="All">All Statuses</option>
                            <option value="Active">Active</option>
                            <option value="Expired">Expired</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-sm btn-warning" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-6 text-end">
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <a asp-page="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Contract
                    </a>
                }

            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Contract #</th>
                        <th>Client</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Days Remaining</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal for assigning contract to serial numbers -->
<div class="modal fade" id="assignContractModal" tabindex="-1" aria-labelledby="assignContractModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignContractModalLabel">Manage Contract Serial Numbers</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modalLoading" class="text-center p-3" style="display: none;">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="modalContent">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Check serial numbers to assign this contract, uncheck to remove.
                    </div>

                    <!-- Summary Section -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <span class="badge bg-success" id="assignedCount">0 assigned</span>
                        </div>
                        <div class="col-md-6">
                            <span class="badge bg-secondary" id="availableCount">0 available</span>
                        </div>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="selectAllSerialNumbers">
                        <label class="form-check-label" for="selectAllSerialNumbers">
                            <strong>Select All</strong>
                        </label>
                    </div>

                    <div id="serialNumbersList" class="mb-3" style="max-height: 400px; overflow-y: auto;">
                        <!-- Serial numbers will be populated here -->
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="assignContractToSelected()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/maintenancecontract.js"></script>
}