@page
@model RepairShop.Areas.Admin.Pages.MaintenanceContracts.IndexModel
@{
    ViewData["Title"] = "Maintenance Contracts";
}

<div class="card shadow border-0 my-4">
    <div class="card-header text-white bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Maintenance Contracts</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <!-- Filters -->
                <div class="row align-items-center">
                    <div class="col-auto">
                        <label for="statusFilter" class="col-form-label fw-bold">Filter by Status:</label>
                    </div>
                    <div class="col-auto">
                        <select id="statusFilter" class="form-select form-select-sm">
                            <option value="All">All Statuses</option>
                            <option value="Active">Active</option>
                            <option value="Expired">Expired</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-sm btn-warning" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-6 text-end">
                <a asp-page="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Contract
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Contract #</th>
                        <th>Client</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Days Remaining</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/maintenancecontract.js"></script>
}