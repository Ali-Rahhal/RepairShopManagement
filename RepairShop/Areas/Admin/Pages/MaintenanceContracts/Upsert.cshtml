@page
@model RepairShop.Areas.Admin.Pages.MaintenanceContracts.UpsertModel
@{
    ViewData["Title"] = Model.MaintenanceContractForUpsert.Id == 0 
        ? "Create Maintenance Contract" 
        : "Edit Maintenance Contract";
}

<div class="card shadow border-0 my-4 w-100 w-xl-60 mx-auto">
    <div class="card-header text-white bg-primary bg-gradient py-3">
        <h2 class="text-center mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="card-body p-4">

        <form method="post" id="maintenanceContractForm" class="row g-4">
            <input type="hidden" asp-for="MaintenanceContractForUpsert.Id" />

            <!-- Client Selection -->
            <div class="col-12">
                <label asp-for="MaintenanceContractForUpsert.ClientId" class="form-label fw-bold">
                    <i class="bi bi-person-circle me-1"></i> Client
                </label>

                <select asp-for="MaintenanceContractForUpsert.ClientId" asp-items="@Model.ClientList"
                        class="form-select form-select-lg">
                    <option value="">-- Select Client --</option>
                </select>

                <small class="text-muted">Select the customer this maintenance contract belongs to.</small>
                <span asp-validation-for="MaintenanceContractForUpsert.ClientId" class="text-danger"></span>
            </div>

            <!-- Dates Section -->
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light fw-bold">
                        <i class="bi bi-calendar-range me-1"></i> Contract Duration
                    </div>
                    <div class="card-body row g-4">
                        <div class="col-md-6">
                            <label asp-for="MaintenanceContractForUpsert.StartDate" class="form-label fw-bold">
                                Start Date
                            </label>
                            <input asp-for="MaintenanceContractForUpsert.StartDate" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="MaintenanceContractForUpsert.StartDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="MaintenanceContractForUpsert.EndDate" class="form-label fw-bold">
                                End Date
                            </label>
                            <input asp-for="MaintenanceContractForUpsert.EndDate" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="MaintenanceContractForUpsert.EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="col-12 d-flex align-items-center justify-content-between mt-2 flex-wrap gap-2">

                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check2-circle me-1"></i>
                    @(Model.MaintenanceContractForUpsert.Id != 0 ? "Update Contract" : "Create Contract")
                </button>

                <a asp-page="Index" class="btn btn-outline-primary px-4">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>

                @if (Model.MaintenanceContractForUpsert.Id != 0)
                {
                    <a asp-page="AssignSerialNumbers" asp-route-id="@Model.MaintenanceContractForUpsert.Id"
                       class="btn btn-success px-4 ms-auto">
                        <i class="bi bi-upc-scan me-1"></i> Manage Serial Numbers
                    </a>
                }
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
