@model RepairShop.Models.Helpers.PartStockHistoryVMs.PartUsageReportVM
@if (Model == null) { return; }

<div class="row g-3 mb-4">

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <small class="text-muted">Quantity at Start</small>
                <h3>@Model.QuantityAtStart</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <small class="text-muted">Quantity at End</small>
                <h3>@Model.QuantityAtEnd</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <small class="text-muted">Net Change</small>
                <h3 class="@(Model.NetChange >= 0 ? "text-success" : "text-danger")">
                    @Model.NetChange
                </h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <small class="text-muted">Devices Used</small>
                <h3>@Model.DevicesCount</h3>
            </div>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>User</th>
            <th>Date</th>
            <th>Client</th>
            <th>Serial Number</th>
            <th>Model</th>
            <th>Change</th>
            <th>Quantity After</th>
            <th>Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model.History)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(h.UserName))
                    {
                        <span class="badge bg-success">@h.UserName</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>

                <td>@h.Date.ToString("dd-MMM-yyyy hh:mm tt")</td>

                <td>
                    @if (!string.IsNullOrEmpty(h.ClientName))
                    {
                        <span class="badge bg-primary">@h.ClientName</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(h.SerialNumber))
                    {
                        <code class="font-monospace">@h.SerialNumber</code>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(h.ModelName))
                    {
                        <span class="badge bg-secondary">@h.ModelName</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>

                <td class="@(h.QuantityChange > 0 ? "text-success fw-bold" : "text-danger fw-bold")">
                    @h.QuantityChange
                </td>

                <td>
                    <span class="badge bg-info">@h.QuantityAfter</span>
                </td>

                <td>
                    <small>@h.Reason</small>
                </td>
            </tr>
        }
    </tbody>
</table>
