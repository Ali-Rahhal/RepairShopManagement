@page
@model RepairShop.Areas.Admin.Pages.PartReports.IndexModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary text-white">
        <h4 class="text-center mb-0">Part Usage & Stock Report</h4>
    </div>

    <div class="card-body">
        <form id="reportForm" method="post">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Part</label>
                    <select id="partSelect" name="partId" class="form-select"></select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Start Date</label>
                    <input type="date" name="startDate" class="form-control" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">End Date</label>
                    <input type="date" name="endDate" class="form-control" required />
                </div>

                <div class="col-md-2">
                    <button class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Generate
                    </button>
                </div>

            </div>
        </form>

        <hr />

        <div id="reportResult"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/part-report.js" asp-append-version="true"></script>
}
